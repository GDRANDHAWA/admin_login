<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="6.0"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    >
    <RelativeLayout

        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="4.0"
        android:layout_marginTop="20.0dip"
        android:id="@+id/relv1"
        android:gravity="center_vertical">
       <RelativeLayout
           android:layout_width="260dip"
           android:layout_height="260dip"
           android:background="@drawable/center_back"
           android:layout_marginTop="10.0dip"
           android:id="@+id/reliner1"
           android:gravity="center_vertical"
           android:layout_centerHorizontal="true"
           android:paddingRight="5.0dip"
           android:paddingLeft="5.0dip">
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10.0dip"
            android:id="@+id/Please_Login"
            android:layout_centerHorizontal="true"
            android:text="Admin Login"
            android:textColor="#ffffffff" android:textStyle="bold"
            android:textSize="24.0sp"/>
           <RelativeLayout android:layout_height="45.0dip"
               android:layout_width="wrap_content"
               android:background="@drawable/username"
               android:layout_marginTop="15.0dip"
               android:id="@+id/imageView1"
               android:layout_below="@+id/Please_Login">

           <EditText android:layout_height="wrap_content"
               android:layout_width="fill_parent"
               android:background="@null"
               android:id="@+id/username"
               android:paddingLeft="45.0dip"
               android:textColor="#ffffffff"
               android:imeOptions="actionNext"
               android:layout_centerVertical="true"
               android:hint="USERNAME"
               android:textColorHint="#FFFFFF" />

       </RelativeLayout>


           <RelativeLayout android:layout_height="45.0dip"
               android:layout_width="wrap_content"
               android:background="@drawable/pass"
               android:layout_marginTop="15.0dip"
               android:id="@+id/imageView1s"
               android:layout_below="@+id/imageView1">

           <EditText android:layout_height="wrap_content"
               android:layout_width="fill_parent"
               android:background="@null"
               android:id="@+id/password"
               android:gravity="center_vertical"
               android:paddingLeft="45.0dip"
               android:textColor="#ffffffff"
               android:imeOptions="actionDone"
               android:layout_centerVertical="true"
               android:hint="PASSWORD"
               android:textColorHint="#FFFFFF"
               android:inputType="textPassword"/>
       </RelativeLayout>

           <ImageView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:id="@+id/login_btn"
               android:layout_below="@+id/checkBox1"
               android:src="@drawable/login_selector"
               android:layout_marginRight="20.0dip"
               android:layout_marginLeft="20.0dip"/>

           <CheckBox android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:layout_marginTop="10.0dip"
               android:id="@id/checkBox1"
               android:text="REMEMBER ME"
               android:textColor="#ffffffff"
               android:layout_below="@id/imageView1s"
               android:layout_alignRight="@id/imageView1s"/>

       </RelativeLayout>


    <RelativeLayout android:layout_height="40.0dip"
    android:layout_width="260.0dip"
    android:background="@drawable/footer"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/reliner1">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/registerme"
        android:text="ADD NEW USER"
        android:textColor="#ffe109dd"
        android:textStyle="bold"
        android:textSize="18.0sp"
        android:layout_centerInParent="true"/>

    </RelativeLayout>
      </RelativeLayout>


      </LinearLayout>
