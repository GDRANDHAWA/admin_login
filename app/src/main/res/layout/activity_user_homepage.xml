<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerl">










<LinearLayout
    android:id="@+id/activity_main6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:weightSum="3"
    android:orientation="vertical"


    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3b6cd6"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="usrservicentry"
   >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/wrench_icon"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/sprt_car1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sports_car"
            android:id="@+id/sprt_car1"

            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAINTENANCE"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:textColor="#fff"
            android:textStyle="bold"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f28a13"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="fuelentry">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Fuel"
            android:layout_centerHorizontal="true"
            android:paddingLeft="50dp"

            android:textSize="40dp"
            android:textColor="#fff"
            android:layout_marginLeft="45dp"
            android:id="@+id/fuel_1"
            />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gas_station"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dc4444"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="distrvlentry">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Distance"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/distance_tr"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="TRAVELLED"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/distance_tr"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="76dp"
            android:src="@drawable/distance_icon"
            android:layout_centerVertical="true"

            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2" />
    </RelativeLayout>

</LinearLayout>
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#3a6ec2"
    android:layout_gravity="left">
    <RelativeLayout
        android:id="@+id/profileBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/material_blue_grey_800"
        android:padding="8dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/driver1600"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/avatar"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/drivernamr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehiclassigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="4dp"
                android:text="VehicleNumber"
                android:textColor="#fff"
                android:textSize="12sp"
               />
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/navList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profileBox"
        android:orientation="vertical"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/R1"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserId :"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/tt2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_idnumber"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_toRightOf="@+id/tt2"
                android:id="@+id/tt3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tt3"/>
            </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="viewdprofile">



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/profile_img"
                android:layout_centerVertical="true"
                android:src="@drawable/profiledr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/profile_text"
                android:layout_toRightOf="@+id/profile_img"
                android:text="View Profile"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="25dp"

                android:layout_marginLeft="5dp"


                android:onClick="viewdprofile"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_below="@id/profile_text"
                android:layout_marginTop="15dp"/>



    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/rating_img"
                android:layout_centerVertical="true"
                android:src="@drawable/rating"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/rate_text"
                android:layout_toRightOf="@+id/rating_img"
                android:text="Rate App"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="25dp"

                android:layout_marginLeft="5dp"

                android:clickable="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_below="@id/rate_text"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
android:clickable="true"
            android:textColor="#000"
            android:layout_alignParentBottom="true"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>


    </android.support.v4.widget.DrawerLayout>


