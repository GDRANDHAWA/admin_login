<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Sign Up"
        android:textColor="#151414"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/textt"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint= "enter name"
        android:gravity="center"
        android:textColorHint="#000"
        android:background="@drawable/rectangle"
        android:id="@+id/adminname"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textt"
        android:textColor="#000"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:imeOptions="actionNext"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="enter emai id"
        android:gravity="center"
        android:textColorHint="#000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:id="@+id/email"
        android:textColor="#000"
        android:layout_below="@id/adminname"
        android:inputType="textEmailAddress"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="DOB DD-MM-YYYY"
        android:gravity="center"
        android:textColorHint="#000"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:id="@+id/dob"
        android:layout_below="@id/email"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="Contact No."
        android:gravity="center"
        android:textColorHint="#000"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:id="@+id/cntct"
        android:layout_below="@id/dob"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="enter password"
        android:gravity="center"
        android:textColorHint="#000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:id="@+id/pass"
        android:layout_marginTop="40dp"
        android:layout_below="@id/cntct"
        android:textColor="#000"
        android:inputType="textPassword"
        android:imeOptions="actionNext"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="confirm password"
        android:gravity="center"
        android:textColorHint="#000"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"
        android:id="@+id/cpass"
        android:layout_below="@id/pass"

        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:inputType="textPassword"
        android:imeOptions="actionDone"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/cpass"
        android:layout_marginTop="10dp"
        android:src="@drawable/bluesubmitbutton"
        android:layout_centerHorizontal="true"
        android:onClick="admreg"
        android:id="@+id/adsubmt"
        android:clickable="true"/>

  />

</RelativeLayout>
